<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/student_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/student_name_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.179" />

    <TextView
        android:id="@+id/student_grade_avg_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/student_grade_avg_text_view"
        app:layout_constraintEnd_toEndOf="@+id/student_name_text_view"
        app:layout_constraintStart_toStartOf="@+id/student_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/student_name_text_view" />

    <Button
        android:id="@+id/calc_grade_avg_button"
        android:layout_width="189dp"
        android:layout_height="57dp"
        android:layout_marginTop="50dp"
        android:text="@string/calc_grade_avg_button"
        app:layout_constraintEnd_toEndOf="@+id/student_grade_avg_text_view"
        app:layout_constraintStart_toStartOf="@+id/student_grade_avg_text_view"
        app:layout_constraintTop_toBottomOf="@+id/student_grade_avg_text_view" />

    <Button
        android:id="@+id/next_student_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/next_student_button"
        app:layout_constraintEnd_toEndOf="@+id/calc_grade_avg_button"
        app:layout_constraintStart_toEndOf="@+id/prev_student_button"
        app:layout_constraintTop_toBottomOf="@+id/calc_grade_avg_button" />

    <Button
        android:id="@+id/prev_student_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:text="@string/prev_student_button"
        app:layout_constraintEnd_toStartOf="@+id/next_student_button"
        app:layout_constraintStart_toStartOf="@+id/calc_grade_avg_button"
        app:layout_constraintTop_toBottomOf="@+id/calc_grade_avg_button" />
</androidx.constraintlayout.widget.ConstraintLayout>